<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Multifield Tabs"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured"
               sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <tab-1 jcr:primaryType="nt:unstructured"
                      jcr:title="Multifield Simples"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <multifieldOne composite="{Boolean}true"
                                          fieldLabel="Simples"
                                          jcr:primaryType="nt:unstructured"
                                          sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                              <field cq-msm-lockable="./multifieldOne"
                                     jcr:primaryType="nt:unstructured"
                                     name="./multifieldOne"
                                     sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                 <items jcr:primaryType="nt:unstructured">
                                    <textZero fieldLabel="Digite um texto:"
                                              jcr:primaryType="nt:unstructured"
                                              name="./textZero"
                                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                    <buttonOne fieldLabel="Digite um texto para o botão:"
                                               jcr:primaryType="nt:unstructured"
                                               name="./buttonOne"
                                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                 </items>
                              </field>
                           </multifieldOne>
                        </items>
                     </column>
                  </items>
               </tab-1>
               <tab-2 jcr:primaryType="nt:unstructured"
                      jcr:title="Multifield Composto"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <multifieldTwo composite="{Boolean}true"
                                          fieldLabel="Composto"
                                          jcr:primaryType="nt:unstructured"
                                          sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                              <field cq-msm-lockable="./multifieldTwo"
                                     jcr:primaryType="nt:unstructured"
                                     name="./multifieldTwo"
                                     sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                 <items jcr:primaryType="nt:unstructured">
                                    <textOne fieldLabel="Digite o 1° texto:"
                                             jcr:primaryType="nt:unstructured"
                                             name="./textOne"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                                    <textTwo fieldLabel="Digite o 2° texto:"
                                             jcr:primaryType="nt:unstructured"
                                             name="./textTwo"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/textarea"/>
                                 </items>
                              </field>
                           </multifieldTwo>
                        </items>
                     </column>
                  </items>
               </tab-2>
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
